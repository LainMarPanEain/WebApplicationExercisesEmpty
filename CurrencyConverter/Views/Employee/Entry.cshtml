<body>
    <h1>Employee Entry</h1>
    <form action="/Employee/Entry" method="post">
        <label for="eid">Employee ID: </label>
        <input type="text" id="eid" name="Id">
        <br>
        <br>

        <label for="fname">Employee Name: </label>
        <input type="text" id="fname" name="FirstName">
        <br>
        <br>

        <label for="lname">Last Name:  </label>
        <input type="text" id="lname" name="LastName">
        <br>
        <br>

        <label for="street">Street:  </label>
        <input type="text" id="street" name="Address.Street">
        <br>
        <br>

        <label for="tsp">Township:  </label>
        <input type="text" id="tsp" name="Adress.Township">
        <br>
        <br>

        <label for="city">City:  </label>
        <input type="text" id="city" name="Address.City">
        <br>
        <br>

        <button type="submit" id="entry">Submit</button>
        <button id="cancelBtn">Cancel</button>
    </form>
    @if (ViewData["employee"] != null)
    {
        <div>
            Welcome @ViewBag.FullName!!
            @ViewData["suggestionMsg"]
        </div>
    }
</body>