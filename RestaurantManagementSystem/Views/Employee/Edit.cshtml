@using RestaurantManagementSystem.Models.ViewModels;﻿
@model EmployeeViewModel
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<div class="container">
    <h1>Employee Edit</h1>
    <hr />
    <form action="/employee/update" method="post">
        <input type="hidden" name="Id" value="@Model.Id" /> <!--hidden value to update the record -->
        <div class="mb-3">
            <label class="form-label">Code</label>
            <input class="form-control" type="text" name="Code" required value="@Model.Code" />
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input class="form-control" type="text" name="Name" required value="@Model.Name" />
        </div>
        <div class="mb-3">
            <label class="form-label">Position</label>
            <select class="form-control" id="PositionId" name="PositionId">
                @foreach (var position in @ViewBag.Positions)
                {
                    <option value="@position.Id">@position.Name</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">NRC Number</label>
            <input class="form-control" type="text" name="Nrc" required value="@Model.Nrc" />
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input class="form-control" type="text" name="Email" required value="@Model.Email" />
        </div>
        <div class="mb-3">
            <label class="form-label">Phone</label>
            <input class="form-control" type="text" name="Phone" required value="@Model.Phone" />
        </div>
        <div class="mb-3">
            <label class="form-label">Address</label>
            <input class="form-control" type="text" name="Address" required value="@Model.Address" />
        </div>
        <div class="mb-3">
            <label class="form-label" for="Gender">Gender</label>
            <select class="form-control" id="Gender" name="Gender" value="Choose Gender">
                <option value="Female">Female</option>
                <option value="Male">Male</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label" for="DOB">Date Of Birth:</label>
            <input class="form-control" type="date" id="DOB" name="DOB" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="JoinedDate">Start working date:</label>
            <input class="form-control" type="date" id="JoinedDate" name="JoinedDate" required>
        </div>
        
        <input class="btn btn-success" type="submit" value="Update">
    </form>
</div>