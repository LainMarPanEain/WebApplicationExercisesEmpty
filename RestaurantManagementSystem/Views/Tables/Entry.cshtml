<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <h1>Add New Tables</h1>
    <div class="text-success">
        @if (ViewBag.Msg != null)
        {
            @ViewBag.Msg
        }
    </div>
    <form action="/tables/Entry" method="post">
        <div class="mb-3">
            <label class="form-label" for="No">Table Number:</label>
            <input class="form-control" type="number" id="No" name="No" required>
        </div>

        <div class="mb-3">
            <label class="form-label" for="IsAvailable">Is Available</label>
            <select class="form-control" id="IsAvailable" name="IsAvailable" value="IsAvailable">
                <option value="yes">Yes</option>
                <option value="no">No</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label" for="AvailablePerson">Available Person:</label>
            <input class="form-control" type="number" id="AvailablePerson" name="AvailablePerson" required>
        </div>

        <input class="btn btn-success" type="submit" value="Entry">
    </form>
</body>
</html>
