@using RestaurantManagementSystem.Models.ViewModels;﻿﻿
@model IList<PositionViewModel>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<h1>Position Information </h1>
<hr />
@if (TempData["Msg"] != null)
{
    <div class="text-info">
        <b>@TempData["Msg"] </b>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Code</th>
            <th scope="col">Name</th>
            <th scope="col">Basic Salary</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }
        @foreach (var position in Model)
        {
            <tr>
                <th scope="row">@index</th>
                <td>@position.Code</td>
                <td>@position.Name</td>
                <td>@position.BasicSalary</td>
                <td>
                    <a href="/position/edit?Id=@position.Id" class="btn btn-success" role="button">edit</a>
                    <a href="/position/delete?Id=@position.Id" onclick=" return confirm('are you sure to delete this record?');" class="btn btn-danger" role="button">delete</a>
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>